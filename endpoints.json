{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [{
      "column": "topic",
      "description": "filters articles by the specified topic",
      "example": "cooking"
    },
    {
      "column": "sort_by",
      "description": "sorts articles by any valid column (e.g. 'created_at', 'votes')",
      "example": "created_at"
    },
    {
      "column": "order",
      "description": "order of sorting, either 'asc' or 'desc'",
      "example": "desc"
    }],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "weegembump",
          "avatar_url": "https://www.healthyfood.com/wp-content/uploads/2018/05/seafood-substitutions-are-increasing.jpg",
          "name": "Rachael O'Leary"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article by its ID",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 28,
        "article_img_url": "https://www.healthyfood.com/wp-content/uploads/2018/05/seafood-substitutions-are-increasing.jpg"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for a specific article by its ID",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "author": "weegembump",
          "votes": 16,
          "created_at": "2018-05-30T15:59:13.341Z",
          "body": "This is a comment"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to a specific article by its ID",
    "queries": [],
    "body": {
      "username": "weegembump",
      "body": "This is a new comment"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "author": "weegembump",
        "votes": 0,
        "created_at": "2018-05-30T15:59:13.341Z",
        "body": "This is a new comment"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes of a specific article by its ID",
    "queries": [],
    "body": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 1,
        "article_img_url": "https://www.healthyfood.com/wp-content/uploads/2018/05/seafood-substitutions-are-increasing.jpg"
      }
    }
  },
    "DELETE /api/comments/:comment_id": {
      "description": "deletes a comment by its ID",
      "queries": [],
      "exampleResponse": {
        "204": "No Content"
      }
    }
}

